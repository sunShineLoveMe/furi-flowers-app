@import "/common/common.wxss";

swiper {
    height: 421.5rpx;
}

swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title,.newest-title{
    width: 100%;
    padding: 30rpx 0;
    height: 40rpx;
    text-align: center;
    color: #AB956D;
}

.select-top {
    width: 100%;
    height: 375rpx;
    display: flex;
    flex-direction: row;
}

.select-top-small {
    width: 375rpx;
    height: 375rpx;
}

.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%; 
    height: 100%;
}

.select-bottom {
    width: 100%;
    height: 375rpx;
}

.newest-box {
    padding: 0 40rpx;
}

.newest-box .newest-list {
    display: inline-block;
    width: 325rpx;
    height: 325rpx;
    margin: 0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}

.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}

.newest-box .newest-list image{
    width: 175rpx;
    height: 175rpx;
    margin: 20rpx 0 10rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}


